# Neo4j Database Configuration
# Copy this file to .env and fill in your actual credentials

# Neo4j connection URI
# Use bolt://127.0.0.1:7687 for local Neo4j
# Use neo4j+s://your-database-id.databases.neo4j.io for Neo4j Aura
NEO4J_URI=bolt://127.0.0.1:7687

# Neo4j authentication
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_password_here

# Optional: Neo4j database name (defaults to neo4j)
NEO4J_DATABASE=neo4j

# Optional: Additional Neo4j configuration
# NEO4J_TIMEOUT=30
# NEO4J_MAX_CONNECTION_LIFETIME=3600

# Docker Compose specific Neo4j configuration
# These are used by docker-compose.yaml when running Neo4j in Docker
# NEO4J_AUTH=neo4j/your_password_here  # Format: username/password
# NEO4J_dbms_memory_heap_initial__size=512m
# NEO4J_dbms_memory_heap_max__size=2G
# NEO4J_dbms_memory_pagecache_size=1G

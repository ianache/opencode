# Add MCP environment variables to .env.example

# MCP Server Configuration
MCP_SERVER_NAME="Product Management MCP Server"
MCP_HOST=127.0.0.1
MCP_PORT=8000
MCP_TRANSPORT=sse

# MCP Authentication
MCP_AUTH_ENABLED=true
MCP_JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
MCP_JWT_EXPIRY_HOURS=24

# MCP Security
MCP_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
MCP_RATE_LIMIT_ENABLED=true
MCP_RATE_LIMIT_PER_MINUTE=60

# MCP Logging
MCP_LOG_LEVEL=INFO
MCP_LOG_REQUESTS=true

# MCP Development
MCP_DEBUG_MODE=false
MCP_RELOAD_ON_CHANGE=false

# MCP Neo4j Configuration (if different from main config)
# MCP_NEO4J_URI=bolt://localhost:7687
# MCP_NEO4J_USERNAME=neo4j
# MCP_NEO4J_PASSWORD=your_password
# MCP_NEO4J_DATABASE=neo4j

# MCP Database Configuration
MCP_DB_MAX_CONNECTIONS=10
MCP_DB_CONNECTION_TIMEOUT=30
MCP_DB_QUERY_TIMEOUT=60
MCP_DB_MAX_QUERY_RESULTS=1000
MCP_DB_ENABLE_QUERY_CACHE=true
MCP_DB_CACHE_TTL=300